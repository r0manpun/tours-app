extends baseEmail

block content
  p Hi #{ firstName },
  p Your account has been created successfully.
  p To verify your email please click verify email button below. (#{ url })
  table.btn.btn-primary(
    role='presentation',
    border='0',
    cellpadding='0',
    cellspacing='0'
  )
    tbody
      tr
        td(align='left')
          table(
            role='presentation',
            border='0',
            cellpadding='0',
            cellspacing='0'
          )
            tbody
              tr
                td
                  a.verify-email(href=`${url}`) Verify Your Email
